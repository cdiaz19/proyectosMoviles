<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lenovo.lab">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- ######################### Login ######################### -->
        <activity
            android:name=".Activity.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ####################### Principal ####################### -->
        <activity
            android:name=".Activity.NavDrawerActivity"
            android:label="@string/title_activity_nav_drawer"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- ######################### Carrera ######################### -->
        <activity
            android:name=".Activity.AdmCarreraActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.AddUpdCarreraActivity"
            android:label="@string/my_carrera" />

        <!-- ########################## Curso ########################## -->
        <activity
            android:name=".Activity.AdmCursoActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.AddUpdCursoActivity"
            android:label="@string/my_curso" />

        <!-- ########################## Profesor ########################## -->
        <activity
            android:name=".Activity.AdmProfesorActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.AddUpdProfesorActivity"
            android:label="@string/my_profesor" />

        <!-- ########################## Alumno ########################## -->
        <activity
            android:name=".Activity.AdmAlumnoActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.AddUpdAlumnoActivity"
            android:label="@string/my_alumno" />

        <!-- ########################## Ciclo ########################## -->
        <activity
            android:name=".Activity.AdmCicloActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.AddUpdCicloActivity"
            android:label="@string/my_ciclo" />

        <!-- ########################## Grupo ########################## -->
        <activity
            android:name=".Activity.AdmGrupoActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.AddUpdGrupoActivity"
            android:label="@string/my_grupo" />
        <activity
            android:name=".Activity.OfertaAcademicaActivity"
            android:label="@string/ofertaAcademica" />
        <!-- ########################## Grupo ########################## -->
        <activity
            android:name=".Activity.AdmSeguridadActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.AddUpdSeguridadActivity"
            android:label="@string/my_seguridad" />
        <activity android:name=".Activity.HistorialActivity" />
        <activity android:name=".Activity.RegistroNotasActivity" />

        <!-- ########################## Matricula ########################## -->
        <activity
            android:name=".Activity.MatriculaActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.AddMatriculaActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- ########################## Historial ########################## -->
        <activity
            android:name=".Activity.ShowHistorialActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>