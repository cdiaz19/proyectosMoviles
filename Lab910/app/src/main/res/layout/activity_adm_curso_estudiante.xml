<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingBottom="@dimen/activity_vertical_margin"
  android:paddingLeft="@dimen/activity_horizontal_margin"
  android:paddingRight="@dimen/activity_horizontal_margin"
  android:paddingTop="@dimen/activity_vertical_margin"
  tools:context=".Activity.AdmCursoEstudianteActivity"
  android:orientation="vertical"
  android:weightSum="1">

  <TextView
    android:text="Asignar un Curso Al Estudiante"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/txtCrear" />

  <TextView
  android:text="Seleccione un Estudiante"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:id="@+id/txtVerEstudiante" />

  <Spinner
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:id="@+id/spinEstudiantes" />

  <TextView
    android:text="Seleccione un Curso"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/txtVerCurso" />

  <Spinner
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/spinCursos" />


  <Button
    android:text="Crear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/btnCrearCursoEstudiante" />

  <TextView
    android:text="Seleccione un Curso ya asignado al Estudiante"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/txtVer" />

  <Spinner
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/spinCursosEstudiantes" />

  <Button
    android:text="Ver"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/btnVerCursoEstudiante" />

  <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="textPersonName"
    android:hint="Estudiante"
    android:ems="10"
    android:id="@+id/txtEstudianteCurso" />

  <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="number"
    android:hint="Curso"
    android:ems="10"
    android:id="@+id/txtCursoCurso" />

  <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/btnActualizarCursoEstudiante" />

  <Button
    android:text="Eliminar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/btnEliminarCursoEstudiante" />

</LinearLayout>