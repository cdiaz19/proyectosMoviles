<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingBottom="@dimen/activity_vertical_margin"
  android:paddingLeft="@dimen/activity_horizontal_margin"
  android:paddingRight="@dimen/activity_horizontal_margin"
  android:paddingTop="@dimen/activity_vertical_margin"
  tools:context=".Activity.AdmCursoActivity"
  android:orientation="vertical"
  android:weightSum="1">

  <TextView
    android:text="Crea un nuevo Curso"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/txtCrear" />

  <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="textPersonName"
    android:hint="Descripcion"
    android:ems="10"
    android:id="@+id/editDescripcion" />

  <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="number"
    android:hint="Creditos"
    android:ems="10"
    android:id="@+id/editCredito" />

  <!--<TextView-->
    <!--android:text="Seleccione un Estudiante para el Curso"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:id="@+id/txtVerEstudiante" />-->

  <!--<Spinner-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:id="@+id/spinEstudiantes" />-->

  <Button
    android:text="Crear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/btnCrearCurso" />

  <TextView
    android:text="Seleccione un Curso"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/txtVer" />

  <Spinner
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/spinCursos" />

  <Button
    android:text="Ver"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/btnVerCurso" />

  <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="textPersonName"
    android:hint="Descripcion"
    android:ems="10"
    android:id="@+id/txtDescripcion" />

  <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="number"
    android:hint="Creditos"
    android:ems="10"
    android:id="@+id/txtCredito" />

  <Button
    android:text="Actualizar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/btnActualizarCurso" />

  <Button
    android:text="Eliminar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/btnEliminarCurso" />

</LinearLayout>